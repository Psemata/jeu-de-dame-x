<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- StyleSheet for the "Jeu de Dame X" game -->
    <!-- Style for the window -->
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="#3B4252"/>
    </Style>
    <!-- Style for all the texts -->
    <Style x:Key="TextStyle" TargetType="FrameworkElement">
        <Setter Property="TextBlock.Foreground" Value="#EBCB8B"/>
    </Style>
    <!-- Style for the vertical separation -->
    <Style x:Key="SeparationStyle" TargetType="Rectangle">
        <Setter Property="Fill" Value="#EBCB8B"/>
    </Style>
    <!-- Button Style -->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#EBCB8B"/>
        <Setter Property="Foreground" Value="#434C5E"/>
        <Setter Property="BorderBrush" Value="#4C566A"></Setter>
    </Style>
    <!-- Board's border Style -->
    <Style x:Key="BorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#2E3440"/>
        <Setter Property="BorderThickness" Value="5"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>
    <!-- Boolean to visibility converter -->
    <BooleanToVisibilityConverter x:Key="BoolToVis" />
</ResourceDictionary>